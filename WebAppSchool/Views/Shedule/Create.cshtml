@model WebAppSchool.Models.CodeFirst.Shedule
@{
    ViewData["Title"] = "Создать расписание";
}

<h2>Создать расписание</h2>
<div>
    @Html.ActionLink("Создать расписание", "Create")
    @Html.ActionLink("Список расписаний", "Index")
</div>

<div class="row">
    @Html.ValidationSummary(true)
    <div class="col-md-6">
        <form method="post">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Дата</th>
                    <td>
                        @Html.EditorFor(m => m.Date)
                        @Html.ValidationMessageFor(m => m.Date)
                    </td>
                </tr>
                <tr>
                    <th>День недели</th>
                    <td>
                        @Html.EditorFor(m => m.DayOfWeek)
                        @Html.ValidationMessageFor(m => m.DayOfWeek)
                    </td>
                </tr>
                <tr>
                    <th>Время начала</th>
                    <td>
                        @Html.EditorFor(m => m.TimeStart)
                        @Html.ValidationMessageFor(m => m.TimeStart)
                    </td>
                </tr>
                <tr>
                    <th>Время окончания</th>
                    <td>
                        @Html.EditorFor(m => m.TimeEnd)
                        @Html.ValidationMessageFor(m => m.TimeEnd)
                    </td>
                </tr>
                <tr>
                    <th>Учитель</th>
                    <td>
                        @Html.DropDownListFor(m => m.TeacherId, ViewBag.Teachers as SelectList)
                        @Html.ValidationMessageFor(m => m.TeacherId)
                    </td>
                </tr>
                <tr>
                    <th>Класс</th>
                    <td>
                        @Html.DropDownListFor(m => m.GroupClassId, ViewBag.GroupClasses as SelectList)
                        @Html.ValidationMessageFor(m => m.GroupClassId)
                    </td>
                </tr>
                <tr>
                    <th>Предмет</th>
                    <td>
                        @Html.EditorFor(m => m.SubjectId, ViewBag.Subjects as SelectList)
                        @Html.ValidationMessageFor(m => m.SubjectId)
                    </td>
                </tr>
            </table>
            <input type="submit" value="Создать расписание" />
        </form>
    </div>
</div>
