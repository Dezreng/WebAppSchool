@model WebAppSchool.Models.CodeFirst.Teacher
@{
    ViewData["Title"] = "Редактирование учителя";
}

<h2>Редактирование учителя</h2>
<div>
    @Html.ActionLink("Добавить учителя", "Create")
    @Html.ActionLink("Список учителей", "Index")
</div>

<div class="row">
    @Html.ValidationSummary(true)
    <div class="col-md-6">
        @Html.HiddenFor(m => m.Id)
        <form method="post">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>ФИО учителя</th>
                    <td>
                        @Html.EditorFor(m => m.FioTeacher)
                        @Html.ValidationMessageFor(m => m.FioTeacher)
                    </td>
                </tr>
                <tr>
                    <th>Пол</th>
                    <td>
                        @Html.EditorFor(m => m.Gender)
                        @Html.ValidationMessageFor(m => m.Gender)
                    </td>
                </tr>
                <tr>
                    <th>Адрес</th>
                    <td>
                        @Html.EditorFor(m => m.Address)
                        @Html.ValidationMessageFor(m => m.Address)
                    </td>
                </tr>
                <tr>
                    <th>Телефон</th>
                    <td>
                        @Html.EditorFor(m => m.Telephone)
                        @Html.ValidationMessageFor(m => m.Telephone)
                    </td>
                </tr>
                <tr>
                    <th>Пасспорт</th>
                    <td>
                        @Html.EditorFor(m => m.Passport)
                        @Html.ValidationMessageFor(m => m.Passport)
                    </td>
                </tr>
                <tr>
                    <th>Должность</th>
                    <td>
                        @Html.DropDownListFor(m => m.PositionId, ViewBag.Positions as SelectList)
                        @Html.ValidationMessageFor(m => m.FioTeacher)
                    </td>
                </tr>
            </table>
            <input type="submit" value="Сохранить изменения" />
        </form>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}