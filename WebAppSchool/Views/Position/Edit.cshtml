@model WebAppSchool.Models.CodeFirst.Position
@{
    ViewData["Title"] = "Редактирование должности";
}

<h2>Редактирование должности</h2>
<div>
    @Html.ActionLink("Добавить должность", "Create")
    @Html.ActionLink("Список должностей", "Index")
</div>

<div class="row">
    @Html.ValidationSummary(true)
    <div class="col-md-6">
        <form method="post">
            @Html.HiddenFor(m => m.Id)
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Название должности</th>
                    <td>
                        @Html.EditorFor(m => m.TitlePosition)
                        @Html.ValidationMessageFor(m => m.TitlePosition)
                    </td>
                </tr>
                <tr>
                    <th>Оклад</th>
                    <td>
                        @Html.EditorFor(m => m.Salary)
                        @Html.ValidationMessageFor(m => m.Salary)
                    </td>
                </tr>
                <tr>
                    <th>Обязанности</th>
                    <td>
                        @Html.EditorFor(m => m.Responsibilities)
                        @Html.ValidationMessageFor(m => m.Responsibilities)
                    </td>
                </tr>
                <tr>
                    <th>Требования</th>
                    <td>
                        @Html.EditorFor(m => m.Requirements)
                        @Html.ValidationMessageFor(m => m.Requirements)
                    </td>
                </tr>
            </table>
            <input type="submit" value="Сохранить изменения" />
        </form>
    </div>
</div>
