@model WebAppSchool.Models.CodeFirst.Subject
@{
    ViewData["Title"] = "Добавление предмета";
}

<h2>Добавление предмета</h2>

<div>
    @Html.ActionLink("Список предметов", "Index")
</div>

<div class="row">
    @Html.ValidationSummary(true)
    <div class="col-md-6">
        <form method="post">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Название предмета</th>
                    <td>
                        @Html.EditorFor(m => m.TitleSubject)
                        @Html.ValidationMessageFor(m => m.TitleSubject)
                    </td>
                </tr>
                <tr>
                    <th>Описание предмета</th>
                    <td>
                        @Html.TextAreaFor(m => m.Description)
                        @Html.ValidationMessageFor(m => m.Description)
                    </td>
                </tr>
            </table>
            <input type="submit" value="Добавить" />
        </form>
    </div>
</div>